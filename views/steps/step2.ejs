<div id="step-<%= step %>[<%= tab %>]" class="col-12 col-sm-6 col-md-7 col-lg-4 mb-4<% if(tab>1) { %> d-none d-lg-block<% } %>">
    <p class="lead">Choose to Encrypt / Decrypt</p>
    <div class="form-group" id="actions[<%= tab %>]">
        <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" name="action[<%= tab %>]" value="Action" class="custom-control-input" onchange="cryptoExhibit.changeAction(<%= tab %>)">
            <label class="custom-control-label" for="action[<%= tab %>]">Action</label>
        </div>
    </div>
    <%- include('../editor', { step: step, tab: tab, name: 'input' }) %>
</div>
<div id="dummy-<%= step %>[<%= tab %>]" class="d-none d-lg-block col-lg-4"></div>