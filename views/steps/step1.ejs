<div id="step-<%= step %>[<%= tab %>]" class="form-group col-12 col-sm-6 col-md-7 col-lg-4 mb-4<% if(tab>1) { %> d-none d-lg-block<% } %>">
    <label for="algorithm[<%= tab %>]" class="lead"><%- text %></label>
    <select id="algorithm[<%= tab %>]" class="custom-select" onchange="cryptoExhibit.stepInput(<%= tab %>, <%= step %>)">
        <option value="" selected>- Click here to choose -</option>
        <% var groups = helper.groupArray(algorithms, 'group'); Object.keys(groups).forEach(group=>{ %>
        <optgroup label="<%= group %>">
            <% groups[group].forEach(algorithm=>{ %>
            <option value="<%= algorithm.name %>"<% if(algorithm.action||algorithm.actions) {
                %> data-actions="<%= algorithm.action||algorithm.actions.join(',') %>"<% } 
            %>><%= algorithm.displayName %></option>
            <% }); %>
        </optgroup>
        <% }); %>
    </select>
</div>
<div id="dummy-<%= step %>[<%= tab %>]" class="d-none"></div>